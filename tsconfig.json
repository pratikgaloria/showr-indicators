{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false,
    "lib": ["esnext"],
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules", "__tests__", "src/**/*.test.ts"]
}